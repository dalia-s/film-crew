generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  ADMIN 
  CREW 
  PRODUCER 
}

model User {
  id           Int            @id @default(autoincrement())
  clerkId      String         @unique @db.VarChar(32)
  role         Role
  firstName    String         @db.VarChar(32)
  lastName     String         @db.VarChar(32)
  about        String?
  contactNo    String         @db.VarChar(32)
  email        String         @db.VarChar(64)
  profile      Profile?
  availability Availability[]
  projects     Project[]
  createdAt    DateTime       @default(now())
}

model Profile {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [id])
  userId          Int      @unique
  profession      String
  experienceYears Int
  hourlyRate      Decimal? @db.Decimal(6, 2)
  createdAt       DateTime @default(now())
}

model Project {
  id                 Int       @id @default(autoincrement())
  user               User      @relation(fields: [userId], references: [id])
  userId             Int
  projectName        String?
  projectDescription String?
  projectStartDate   DateTime? @db.Date
  projectEndDate     DateTime? @db.Date
  createdAt          DateTime  @default(now())
}

model Availability {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  availableFrom DateTime @db.Date
  availableTo   DateTime @db.Date
  createdAt     DateTime @default(now())
}
