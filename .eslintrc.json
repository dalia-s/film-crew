{
  "extends": ["airbnb", "airbnb/hooks", "airbnb-typescript", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    // "prettier/prettier": ["error"],
    "@typescript-eslint/semi": ["error", "never"],
    "import/extensions": ["error", "always", { "tsx": "never" }, { "ignorePackages": true }],
    "react/react-in-jsx-scope": "off",
    "react/no-array-index-key": "off" // I'll do my best to avoid it :)
  },
  "plugins": ["prettier"],
  "globals": {
    "React": "writable"
  }
}
